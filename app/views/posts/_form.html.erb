<h2> Create New Post </h2>

<%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title%><br><br>

    <%= f.label :content %><br>
    <%= f.text_area :content%><br><br>

    <label>Category</label><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_hidden:false%> <br><br>

    <%= f.fields_for :categories, post.categories.build do |i|%>
        <%= i.label :name, 'Other Category'%><br>
        <%= i.text_field :name%><br><br>
    <% end %> 

    <%= f.submit%>

<% end %>
